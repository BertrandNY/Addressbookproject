pipeline {
    agent any
    tools {
    maven 'mymaven'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['techports_jenkins']) {
  // scp <src_dir> user@tomcatIP:/tomcat/webapps
  sh "scp -o StrictHostKeyChecking=no target/*.war techports@52.202.89.225/:/home/techports/tomcat/webapps"
}
            }
        }
        
    }
}
